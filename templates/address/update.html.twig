{% extends 'base.html.twig' %}

{% block title %}
	Mettre à jour - Adresse |
	{{ parent() }}
{% endblock %}

{# START : address_update #}
{% block body %}
	<main>
		<section class="page">
			<h2>Mettre à jour : Adresse</h2>
			{{ form_start(userUpdateAddressForm, { 'attr': { 'novalidate': 'novalidate', 'class': 'form', 'id': 'user-update-address-form' }}) }}
			{# firstName #}
			<div class="form-field">
				{{ form_label(userUpdateAddressForm, 'Prénom', { 'label_attr': { 'class': 'display-none' }}) }}
				{{ form_widget(userUpdateAddressForm.firstName, { 'id': 'user-update-address-first-name-input', 'attr': {'class': 'form-field__input form-field__input_color_black form-field__input-user-first-name', 'placeholder': 'Prénom' }}) }}
				<p class="error-message error-message_color_red error-message__user-first-name-empty display-none">
					Merci de saisir un prénom.
				</p>
				<p class="error-message error-message_color_red error-message__validity-first-name display-none">
					Merci de saisir un prénom valide.
				</p>
				{{ form_errors(userUpdateAddressForm.firstName) }}
			</div>
			{# lastName #}
			<div class="form-field">
				{{ form_label(userUpdateAddressForm, 'Nom', { 'label_attr': { 'class': 'display-none' }}) }}
				{{ form_widget(userUpdateAddressForm.lastName, { 'id': 'user-update-address-last-name-input', 'attr': { 'class': 'form-field__input form-field__input_color_black form-field__input-user-last-name', 'placeholder': 'Nom' }}) }}
				<p class="error-message error-message_color_red error-message__user-last-name-empty display-none">
					Merci de saisir un nom.
				</p>
				<p class="error-message error-message_color_red error-message__validity-last-name display-none">
					Merci de saisir un nom valide.
				</p>
				{{ form_errors(userUpdateAddressForm.lastName) }}
			</div>
			{# streetNumber #}
			<div class="form-field">
				{{ form_label(userUpdateAddressForm, 'Numéro de rue', { 'label_attr': { 'class': 'display-none' }}) }}
				{{ form_widget(userUpdateAddressForm.streetNumber, { 'id': 'user-update-address-street-number-input', 'attr': { 'class': 'form-field__input form-field__input_color_black form-field__input-address-street-number', 'placeholder': 'Numéro de rue' }}) }}

				<p class="error-message error-message_color_red error-message__empty-street-number display-none">
					Merci de saisir un numéro de rue.
				</p>
				<p class="error-message error-message_color_red error-message__validity-street-number display-none">
					Merci de saisir un numéro de rue valide.
				</p>
				{{ form_errors(userUpdateAddressForm.streetNumber) }}
			</div>
			{# streetName #}
			<div class="form-field">
				{{ form_label(userUpdateAddressForm, 'Nom de rue', { 'label_attr': { 'class': 'display-none' }}) }}
				{{ form_widget(userUpdateAddressForm.streetName, { 'id': 'user-update-address-street-name-input', 'attr': { 'class': 'form-field__input form-field__input_color_black form-field__input-address-street-name', 'placeholder': 'Nom de rue' }}) }}

				<p class="error-message error-message_color_red error-message__empty-street-name display-none">
					Merci de saisir un nom de rue.
				</p>
				<p class="error-message error-message_color_red error-message__validity-street-name display-none">
					Merci de saisir un nom de rue valide.
				</p>
				{{ form_errors(userUpdateAddressForm.streetName) }}
			</div>
			{# zipCode #}
			<div class="form-field">
				{{ form_label(userUpdateAddressForm, 'Code postal', { 'label_attr': { 'class': 'display-none' }}) }}
				{{ form_widget(userUpdateAddressForm.zipCode, { 'id': 'user-update-address-zip-code-input', 'attr': { 'class': 'form-field__input form-field__input_color_black form-field__input-address-zip-code', 'placeholder': 'Code postal' }}) }}
				<p class="error-message error-message_color_red error-message__empty-zip-code display-none">
					Merci de saisir un code postal.
				</p>
				<p class="error-message error-message_color_red error-message__validity-zip-code display-none">
					Merci de saisir un code postal valide.
				</p>
				{{ form_errors(userUpdateAddressForm.zipCode) }}
			</div>
			{# city #}
			<div class="form-field">
				{{ form_label(userUpdateAddressForm, 'Ville', { 'label_attr': { 'class': 'display-none' }}) }}
				{{ form_widget(userUpdateAddressForm.city, { 'id': 'user-update-address-city-input', 'attr': { 'class': 'form-field__input form-field__input_color_black form-field__input-address-city', 'placeholder': 'Ville' }}) }}
				<p class="error-message error-message_color_red error-message__empty-city display-none">
					Merci de saisir un nom de ville.
				</p>
				<p class="error-message error-message_color_red error-message__validity-city display-none">
					Merci de saisir un nom de ville valide.
				</p>
				{{ form_errors(userUpdateAddressForm.city) }}
			</div>
			{# country #}
			<div class="form-field">
				{{ form_label(userUpdateAddressForm, 'Pays', { 'label_attr': { 'class': 'display-none' }}) }}
				{{ form_widget(userUpdateAddressForm.country, { 'id': 'user-update-address-country-input', 'attr': { 'class': 'form-field__input form-field__input_color_black form-field__input-address-country', 'placeholder': 'Pays' }}) }}
				<p class="error-message error-message_color_red error-message__empty-country display-none">
					Merci de saisir un nom de pays.
				</p>
				<p class="error-message error-message_color_red error-message__validity-country display-none">
					Merci de saisir un nom de pays valide.
				</p>
				{{ form_errors(userUpdateAddressForm.country) }}
			</div>
			{# phoneNumber #}
			<div class="form-field">
				{{ form_label(userUpdateAddressForm, 'Numéro de téléphone mobile', { 'label_attr': { 'class': 'display-none' }}) }}
				{{ form_widget(userUpdateAddressForm.phoneNumber, { 'id': 'user-update-address-phone-number-input', 'attr': { 'class': 'form-field__input form-field__input_color_black form-field__input-phone-number', 'placeholder': 'Numéro de téléphone mobile' }}) }}
				<p class="error-message error-message_color_red error-message__empty-phone-number display-none">
					Merci de saisir un numéro de téléphone mobile.
				</p>
				<p class="error-message error-message_color_red error-message__validity-phone-number display-none">
					Merci de saisir un numéro de téléphone mobile valide.
				</p>
				{{ form_errors(userUpdateAddressForm.phoneNumber) }}
			</div>
			{# Submit userUpdateAddressForm button #}
			<button type="submit" class="page__button page__button-submit page__button_background-color_safety-orange page__button_color_white" id="user-update-address-button">
				Mettre à jour
			</button>
			{# END : userUpdateAddressForm #}
			{{ form_end(userUpdateAddressForm) }}
		</section>
	</main>
{% endblock %}
{# END : address_update #}
