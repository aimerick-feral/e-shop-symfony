{% extends 'base.html.twig' %}

{% block title %}
	Cat√©gories |
	{{ parent() }}
{% endblock %}

{# START : category_list #}
{% block body %}
	<main>
		<section class="page">
			<h2>Nos Cat√©gories</h2>
			{# START : searchProductForm #}
			{{ form_start(searchCategoryForm, { 'attr': { 'novalidate': 'novalidate', 'class': 'form', 'id': 'search-category-form' }}
			) }}
			<div class="form-field">
				{{ form_label(searchCategoryForm, 'Rechercher par nom', { 'label_attr': { 'class': 'display-none' }}) }}
				{{ form_widget(searchCategoryForm.name, { 'id': '', 'attr': {'class': 'form-field__input form-field__input_color_black form-field__input-search form-field__input-category-name', 'placeholder': 'üîç Rechercher par nom' }}) }}
				<p class="error-message error-message_color_red error-message__category-name-empty display-none">
					Merci de saisir un nom de cat√©gorie.
				</p>
				<p class="error-message error-message_color_red error-message__category-name-validity display-none">
					Merci de saisir un nom de cat√©gorie valide.
				</p>
				{{ form_errors(searchCategoryForm.name) }}
			</div>
			<button type="submit" class="page__button page__button-submit page__button-search page__button_background-color_blue page__button_color_white" id="search-category-button">
				Rechercher
			</button>
			{{ form_end(searchCategoryForm) }}
			{# END : searchProductForm #}
			<div class="list">
				{% for category in categories %}
					<div class="card card_color_blue">
						<h3>
							<a class="page__link page__link_text_uppercase card__link page__link_color_blue" href="{{ path('category_product_list', {'slug': category.slug}) }}">{{ category.name }}</a>
						</h3>
					</div>
				{% endfor %}
			</div>
		</section>
	</main>
{% endblock %}
{# END : category_list #}
