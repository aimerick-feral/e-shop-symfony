{% extends 'base.html.twig' %}

{% block title %}
	Utilisateurs |
	{{ parent() }}
{% endblock %}

{# START : admin_user_list #}
{% block body %}
	<main>
		<section class="page">
			<h2>Liste des Utilisateurs</h2>
			{# START : searchUserForm #}
			{{ form_start(searchUserForm, { 'attr': { 'novalidate': 'novalidate', 'class': 'form', 'id': 'search-user-form' }}
			) }}
			<div class="form-field">
				{{ form_label(searchUserForm, 'E-mail', { 'label_attr': { 'class': 'display-none' }}) }}
				{{ form_widget(searchUserForm.email, { 'id': 'search-user-input', 'attr': {'class': 'form-field__input form-field__input_color_black form-field__input-search form-field__input-user-email', 'placeholder': 'üîç Rechercher par e-mail' }}
				) }}
				<p class="error-message error-message_color_red error-message__email-empty display-none">
					Merci de saisir un e-mail.
				</p>
				<p class="error-message error-message_color_red error-message__email-validity display-none">
					Merci de saisir un e-mail valide.
				</p>
				{{ form_errors(searchUserForm.email) }}
			</div>
			{{ form_end(searchUserForm) }}
			{# END : searchUserForm #}
			<a class="page__link page__link-create page__link_text_uppercase page__link_background-color_dodger-blue page__link_color_white" href="{{ path('admin_user_create') }}" id="create-user-link">Cr√©er</a>
			<div class="list" id="block-users-list">
				<table class="table table_background-color_blue table_color_white table-user"></table>
			</div>
		</section>
	</main>
{% endblock %}
{# START : admin_user_list #}
