{% extends 'base.html.twig' %}

{% block title %}
	Modes de Livraison |
	{{ parent() }}
{% endblock %}

{# START : admin_delivery_mode_list #}
{% block body %}
	<main>
		<section class="page">
			<h2>Liste des Modes de Livraison</h2>
			{# START : searchProductForm #}
			{{ form_start(searchDeliveryModeForm, { 'attr': { 'novalidate': 'novalidate', 'class': 'form', 'id': 'search-delivery-mode-form' }}
			) }}
			{# Name #}
			<div class="form-field">
				{{ form_label(searchDeliveryModeForm, 'Nom', { 'label_attr': { 'class': 'display-none' }}) }}
				{{ form_widget(searchDeliveryModeForm.name, { 'id': '', 'attr': {'class': 'form-field__input form-field__input_color_black form-field__input-search form-field__input-delivery-mode-name', 'placeholder': 'üîç Rechercher par nom' }}
				) }}
				<p class="error-message error-message_color_red error-message__delivery-mode-name-empty display-none">
					Merci de saisir un nom.
				</p>
				{#! START : deliveryMode name validity not used #}
				<p class="error-message error-message_color_red error-message__delivery-mode-name-validity display-none">
					Merci de saisir un nom de mode de livraison valide.
				</p>
				{#! END : deliveryMode name validity not used #}
				{{ form_errors(searchDeliveryModeForm.name) }}
			</div>
			<button type="submit" class="page__button page__button-submit page__button-search page__button_background-color_blue page__button_color_white" id="search-delivery-mode-button">
				Rechercher
			</button>
			{{ form_end(searchDeliveryModeForm) }}
			{# END : searchProductForm #}
			<a class="page__link page__link_text-transform_uppercase page__link-create page__link_background-color_dodger-blue page__link_color_white" href="{{ path('admin_delivery_mode_create') }}" id="create-delivery-mode-link">Cr√©er</a>
			<div class="list">
				{% for deliveryMode in deliveryModes %}
					{# START : card for mobile #}
					<div class="admin-preview admin-preview_border-color_blueblue">
						<img class="page__picture-entity page__picture-delivery-mode" src="{{ asset('assets/uploads/pictures/delivery-modes/'~ deliveryMode.picture) }}" alt="image {{ deliveryMode.name }}"/>
						<p>{{ deliveryMode.name }}</p>
						<p>{{ deliveryMode.description }}</p>
						<p>{{ deliveryMode.price|amount }}</p>
						<p>Offert √† partir de
							{{ deliveryMode.minCartAmountForFreeDelivery|amount }}</p>
						<a class="page__link page__link_text-transform_uppercase page__link-detail page__link_background-color_blue page__link_color_white" href="{{ path('admin_delivery_mode_detail', {'id': deliveryMode.id}) }}">D√©tails</a>
						<a class="page__link page__link_text-transform_uppercase page__link_background-color_safety-orange page__link_color_white" href="{{ path('admin_delivery_mode_update', {'id': deliveryMode.id}) }}">Modifier</a>
						<a class="page__link page__link-delete page__link-delete-delivery-mode page__link_text-transform_uppercase page__link_margin-bottom_1em page__link_background-color_red page__link_color_white" href="{{ path('admin_delivery_mode_delete', {'id':deliveryMode.id, 'token':csrf_token('admin-delivery-mode-delete' ~ deliveryMode.id)} ) }}" data-deliverymodename="{{ deliveryMode.name }}">Supprimer</a>
					</div>
				{% endfor %}
				{# END : card for mobile #}
				{# START : table for desktop #}
				<table class="table table_background-color_blue table_color_white table-delivery-mode">
					<thead>
						<tr>
							<th>Image</th>
							<th>Nom</th>
							<th>Description</th>
							<th>Prix</th>
							<th>Offert √† partir de</th>
							<th>Actions</th>
						</tr>
					</thead>
					{% for deliveryMode in deliveryModes %}
						<tbody>
							<tr>
								<td>
									<img class="page__picture-entity page__picture-delivery-mode" src="{{ asset('assets/uploads/pictures/delivery-modes/'~ deliveryMode.picture) }}" alt="image {{ deliveryMode.name }}"/>
								</td>
								<td>{{ deliveryMode.name }}</td>
								<td>{{ deliveryMode.description }}</td>
								<td>{{ deliveryMode.price|amount }}</td>
								<td>{{ deliveryMode.minCartAmountForFreeDelivery|amount }}</td>

								<td>
									<a class="page__link page__link-detail page__link_text-transform_uppercase page__link_background-color_blue page__link_color_white" href="{{ path('admin_delivery_mode_detail', {'id': deliveryMode.id}) }}">D√©tails</a>
									<a class="page__link page__link_text-transform_uppercase page__link_background-color_safety-orange page__link_color_white" href="{{ path('admin_delivery_mode_update', {'id': deliveryMode.id}) }}">Modifier</a>
									<a class="page__link page__link-delete page__link-delete-delivery-mode page__link_text-transform_uppercase page__link_background-color_red page__link_color_white" href="{{ path('admin_delivery_mode_delete', {'id':deliveryMode.id, 'token':csrf_token('admin-delivery-mode-delete' ~ deliveryMode.id)} ) }}" data-deliverymodename="{{ deliveryMode.name }}">Supprimer</a>
								</td>
							</tr>
						</tbody>
					{% endfor %}
				</table>
				{# END : table for desktop #}
			</div>
		</section>
	</main>
{% endblock %}
{# END : admin_delivery_mode_list #}
