{% extends 'base.html.twig' %}

{% block title %}
	Créer - Catégorie |
	{{ parent() }}
{% endblock %}

{# START : admin_category_create #}
{% block body %}
	<main>
		<section class="page">
			<h2>Créer une Catégorie</h2>
			{# START :adminCreateCategoryForm #}
			{{ form_start(adminCreateCategoryForm, { 'attr': { 'novalidate': 'novalidate', 'class': 'form', 'id': 'admin-create-category-form' }}) }}
			{# name #}
			<div class="form-field">
				{{ form_label(adminCreateCategoryForm, 'Nom', { 'label_attr': { 'class': 'display-none' }}) }}
				{{ form_widget(adminCreateCategoryForm.name, { 'id': 'create-category-name-input', 'attr': {'class': 'form-field__input form-field__input_color_black form-field__input-category-name', 'placeholder': 'Nom' }}) }}
				<p class="error-message error-message_color_red error-message__category-name-empty display-none">
					Merci de saisir un nom de catégorie.
				</p>
				<p class="error-message error-message_color_red error-message__category-name-validity display-none">
					Merci de saisir un nom de catégorie valide.
				</p>
				{{ form_errors(adminCreateCategoryForm.name) }}
			</div>
			{# products #}
			{#! Not used for now #5 START : productCategoryInputs #}
			{# <div class="form-field">
										{{ form_label(adminCreateCategoryForm, 'Si vous le souhaitez vous pouvez selectionner le ou les produits liés à la catégorie :', { 'label_attr': { 'class': '' }}) }}
										{{ form_widget(adminCreateCategoryForm.products) }}
										<p class="error-message error-message_color_red error-message__product-category-not-checked display-none">
											Merci de sélectionnner au mimimum un produit.
										</p>
										{{ form_errors(adminCreateCategoryForm.products) }}
									</div> #}
			{#! Not used for now #5 END : productCategoryInputs #}

			{# Submit adminCreateCategoryForm button #}
				<button type="submit" class="page__button page__button-submit page__button-create page__button_background-color_dodger-blue page__button_color_white" id="admin-create-category-button"> Créer
			</button>
			{{ form_end(adminCreateCategoryForm) }}
			{# END : adminCreateCategoryForm #}
		</section>
	</main>
{% endblock %}
{# END : admin_category_create #}
