{% extends 'base.html.twig' %}

{% block title %}
	Mettre à jour - Catégorie -
	{{ category.name }}
	|
	{{ parent() }}
{% endblock %}

{# START : admin_category_update #}
{% block body %}
	<main>
		<section class="page">
			<h2>Mettre à jour Catégorie :
				{{ category.name }}</h2>
			{# START :adminUpdateCategoryForm #}
			{{ form_start(adminUpdateCategoryForm, { 'attr': { 'novalidate': 'novalidate', 'class': 'form', 'id': 'admin-update-category-form' }}) }}
			{# name #}
			<div class="form-field">
				{{ form_label(adminUpdateCategoryForm, 'Nom', { 'label_attr': { 'class': 'display-none' }}) }}
				{{ form_widget(adminUpdateCategoryForm.name, { 'id': 'update-category-name-input', 'attr': {'class': 'form-field__input form-field__input_color_black form-field__input-category-name', 'placeholder': 'Nom' }}) }}
				<p class="error-message error-message_color_red error-message__category-name-empty display-none">
					Merci de saisir un nom.
				</p>
				{#! START : category validity not used #}
				{# <p class="error-message error-message_color_red error-message__category-name-validity display-none">
					Merci de saisir un nom de catégorie valide.
				</p> #}
				{#! END : category validity not used #}
				{{ form_errors(adminUpdateCategoryForm.name) }}
			</div>
			{# Submit adminUpdateCategoryForm button #}
			<button type="submit" class="page__button page__button-submit page__button_background-color_safety-orange page__button_color_white" id="admin-update-category-button">
				Mettre à jour
			</button>
			{{ form_end(adminUpdateCategoryForm) }}
			{# END : adminUpdateCategoryForm #}
		</section>
	</main>
{% endblock %}
{# END : admin_category_update #}
