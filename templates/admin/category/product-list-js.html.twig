{% extends 'base.html.twig' %}

{% block title %}
	Produits - Catégorie -
	{{ category.name }}
	|

	{{ parent() }}
{% endblock %}


{# START : admin_category_product_list #}
{% block body %}
	<main>
		<section class="page">
			<h2>Liste des
				{{ category.name }}s</h2>
			{# START : searchProductForm #}
			{{ form_start(searchProductForm, { 'attr': { 'novalidate': 'novalidate', 'class': 'form', 'id': 'search-product-form' }}
			) }}
			<div class="form-field">
				{{ form_label(searchProductForm, 'Rechercher par nom', { 'label_attr': { 'class': 'display-none' }}) }}
				{{ form_widget(searchProductForm.name, { 'id': 'search-product-input', 'attr': {'class': 'form-field__input form-field__input_color_black form-field__input-search form-field__input-product-name', 'placeholder': 'Rechercher par nom' }}) }}
				<p class="error-message error-message_color_red error-message__product-name-empty display-none">
					Merci de saisir un nom.
				</p>
				<p class="error-message error-message_color_red error-message__product-name-validity display-none">
					Merci de saisir un nom de produit valide.
				</p>
				{{ form_errors(searchProductForm.name) }}
			</div>
			{{ form_end(searchProductForm) }}
			{# END : searchProductForm #}
			<a class="page__link page__link_text-transform_uppercase page__link-create page__link_background-color_dodger-blue page__link_color_white" href="{{ path('admin_product_create') }}" id="create-product-link">Créer</a>
			<div class="list" id="block-products-list"></div>
			<table class="table table_background-color_blue table_color_white table-product"></table>
		</section>
	</main>
{% endblock %}
{# START : admin_category_product_list #}
