{% extends 'base.html.twig' %}

{% block title %}
	Cat√©gories |
	{{ parent() }}
{% endblock %}


{# START : admin_category_list #}
{% block body %}
	<main>
		<section class="page">
			<h2>Liste des Cat√©gories</h2>
			{# START : searchCategoryForm #}
			{{ form_start(searchCategoryForm, { 'attr': { 'novalidate': 'novalidate', 'class': 'form', 'id': 'search-category-form' }}
			) }}
			<div class="form-field">
				{{ form_label(searchCategoryForm, 'Rechercher par nom', { 'label_attr': { 'class': 'display-none' }}) }}
				{{ form_widget(searchCategoryForm.name, { 'id': '', 'attr': {'class': 'form-field__input form-field__input_color_black form-field__input-search form-field__input-category-name', 'placeholder': 'üîç Rechercher par nom' }}) }}
				<p class="error-message error-message_color_red error-message__category-name-empty display-none">
					Merci de saisir un nom de cat√©gorie.
				</p>
				<p class="error-message error-message_color_red error-message__category-name-validity display-none">
					Merci de saisir un nom de cat√©gorie valide.
				</p>
				{{ form_errors(searchCategoryForm.name) }}
			</div>
			<button type="submit" class="page__button page__button-submit page__button-search page__button_background-color_blue page__button_color_white" id="search-category-button">
				Rechercher
			</button>
			{{ form_end(searchCategoryForm) }}
			{# END : searchCategoryForm #}
			<a class="page__link page__link-create page__link_text_uppercase page__link_background-color_dodger-blue page__link_color_white" href="{{ path('admin_category_create') }}" id="create-category-link">Cr√©er</a>
			<div class="list">
				{% for category in categories %}
					{# START : card for mobile #}
					<div class="admin-preview admin-preview_color_blue admin-preview_color_white">
						<p>{{ category.name }}</p>
						<a class="page__link  page__link_text_normal page__link_padding-and-margin_0 page__link_color_blue" href="{{ path('admin_category_product_list', {'slug': category.slug}) }}">Liste  des
							{{ category.name }}s</a>
						<a class="page__link page__link-detail page__link_text_uppercase page__link_background-color_blue page__link_color_white" href="{{ path('admin_category_detail', {'slug': category.slug}) }}">D√©tails</a>
						<a class="page__link page__link_text_uppercase page__link_background-color_safety-orange page__link_color_white" href="{{ path('admin_category_update', {'slug': category.slug}) }}">Modifier</a>
						<a class=" page__link page__link-delete page__link_text_uppercase page__link_margin-bottom_1em page__link_background-color_red page__link_color_white" href="{{ path('admin_category_delete', {'id':category.id, 'token':csrf_token('admin-category-delete' ~ category.id)} ) }}">Supprimer</a>
					</div>
				{% endfor %}
				{# END : card for mobile #}
				{# START : table for desktop #}
				<table class="table table_background-color_blue table_color_white table-category">
					<thead>
						<tr>
							<th>Nom</th>
							<th>Produits</th>
							<th>Actions</th>
						</tr>
					</thead>
					{% for category in categories %}
						<tbody>
							<tr>
								<td>{{ category.name }}</td>
								<td>
									<a class="page__link page__link_text page__link_text_normal page__link_padding-and-margin_0 page__link_color_blue" href="{{ path('admin_category_product_list', {'slug': category.slug}) }}">Liste des
										{{ category.name }}s</a>
								</td>
								<td>
									<a class="page__link page__link-detail page__link_text_uppercase  page__link_background-color_blue page__link_color_white" href="{{ path('admin_category_detail', {'slug': category.slug}) }}">D√©tails</a>
									<a class="page__link page__link_text_uppercase page__link_background-color_safety-orange page__link_color_white" href="{{ path('admin_category_update', {'slug': category.slug}) }}">Modifier</a>
									<a class="page__link page__link-delete page__link_text_uppercase page__link_background-color_red page__link_color_white" href="{{ path('admin_category_delete', {'id':category.id, 'token':csrf_token('admin-category-delete' ~ category.id)} ) }}">
										Supprimer</a>
								</td>
							</tr>
						</tbody>
					{% endfor %}
				</table>
				{# END : table for desktop #}
			</div>
		</section>
	</main>
{% endblock %}
{# START : admin_category_list #}
