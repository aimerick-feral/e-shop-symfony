{% extends 'base.html.twig' %}

{% block title %}
	Mode de Livraison -
	{# {{ category.name }} #}
	|
	{{ parent() }}
{% endblock %}

{# START : admin_category_detail #}
{% block body %}
	<main>
		<section class="page">
			<h2>Catégorie :
				{{ category.name }}</h2>
			{# START : card for mobile #}
			<div class=" admin-detail admin-detail_color_blue">
				<p>{{ category.name }}</p>
				<p>
					<a class="page__link page__link_text page__link_font-weight_normal page__link_padding-and-margin_0 page__link_color_blue" href="{{ path('admin_category_product_list', {'slug': category.slug}) }}">Liste des
						{{ category.name }}s</a>
				</p>
				<p>
					Créée le
					{{ category.createdAt|format_datetime('short', 'none', locale='fr') }}
				</p>
				<p>
					Mise à jour le
					{{ category.updatedAt|format_datetime('short', 'none', locale='fr') }}
				</p>
				<a class="page__link page__link_text_uppercase page__link_background-color_safety-orange page__link_color_white" href="{{ path('admin_category_update', {'slug': category.slug}) }}">Modifier</a>
				<a class="page__link page__link-delete page__link_text_uppercase page__link_margin-bottom_1em page__link_background-color_red page__link_color_white" href="{{ path('admin_category_delete', {'id':category.id, 'token':csrf_token('admin-category-delete' ~ category.id)} ) }}">Supprimer</a>
			</div>
			{# END : card for mobile #}
			{# START : table for desktop #}
			<table class="table table_background-color_blue table_color_white table-category">
				<thead>
					<tr>
						<th>Propriétés</th>
						<th>Valeurs</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<th>Nom</th>
						<td>{{ category.name }}</td>

					</tr>
					<tr>
						<th>Produits</th>
						<td>
							<a class="page__link page__link_text page__link_font-weight_normal page__link_padding-and-margin_0 page__link_color_blue" href="{{ path('admin_category_product_list', {'slug': category.slug}) }}">Liste des
								{{ category.name }}s</a>
						</td>
					</tr>
					<tr>
						<th>Créée le</th>
						<td>{{ category.createdAt|format_datetime('short', 'none', locale='fr') }}</td>
					</tr>
					<tr>
						<th>Mise à jour le</th>
						<td>{{ category.updatedAt|format_datetime('short', 'none', locale='fr') }}</td>

					</tr>
					<tr>
						<th>Actions</th>
						<td>
							<a class="page__link page__link_text_uppercase page__link_background-color_safety-orange page__link_color_white" href="{{ path('admin_category_update', {'slug': category.slug}) }}">Modifier</a>
							<a class=" page__link page__link-delete page__link_text_uppercase page__link_background-color_red page__link_color_white" href="{{ path('admin_category_delete', {'id':category.id, 'token':csrf_token('admin-category-delete' ~ category.id)} ) }}">Supprimer</a>
						</td>
					</tr>
				</tbody>
			</table>
			{# END : table for desktop #}
		</section>
	</main>
{% endblock %}
{# START : admin_category_detail #}
