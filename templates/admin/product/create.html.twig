{% extends 'base.html.twig' %}

{% block title %}
	Créer - Produit |
	{{ parent() }}
{% endblock %}

{# START : admin_product_create #}
{% block body %}
	<main>
		<section class="page">
			<h2>Créer un Produit</h2>
			{# START :adminCreateProductForm #}
			{{ form_start(adminCreateProductForm, { 'attr': { 'novalidate': 'novalidate', 'class': 'form', 'id': 'admin-create-product-form' }}) }}
			{# picture #}
			<div class="form-field">
				{{ form_label(adminCreateProductForm, 'Photo', { 'label_attr': { 'class': 'display-none' }}) }}
				{{ form_widget(adminCreateProductForm.picture, { 'id': 'create-product-picture-input', 'attr': { 'class': 'form-field__input form-field__input_color_black form-field__input-file' }}) }}
				<p class="error-message error-message_color_red error-message__file-mime-type display-none">
					Merci de télécharger un fichier au format PDF, PNG, JPEG ou SVG.
				</p>
				<p class="error-message error-message_color_red error-message__file-size display-none">
					Merci de télécharger un fichier de maximum 300 000 bytes.
				</p>
				{{ form_errors(adminCreateProductForm.picture) }}
			</div>
			{# name #}
			<div class="form-field">
				{{ form_label(adminCreateProductForm, 'Nom', { 'label_attr': { 'class': 'display-none' }}) }}
				{{ form_widget(adminCreateProductForm.name, { 'id': 'create-search-product-input', 'attr': {'class': 'form-field__input form-field__input_color_black form-field__input-product-name', 'placeholder': 'Nom' }}) }}
				<p class="error-message error-message_color_red error-message__product-name-empty display-none">
					Merci de saisir un nom de produit.
				</p>
				<p class="error-message error-message_color_red error-message__product-name-validity display-none">
					Merci de saisir un nom de produit valide.
				</p>
				{{ form_errors(adminCreateProductForm.name) }}
			</div>
			{# price #}
			<div class="form-field">
				{{ form_label(adminCreateProductForm, 'Prix', { 'label_attr': { 'class': 'display-none' }}) }}
				{{ form_widget(adminCreateProductForm.price, { 'id': 'create-product-price-input', 'attr': {'class': 'form-field__input form-field__input_color_black form-field__input-product-price', 'placeholder': 'Prix en euros' }}) }}
				<p class="error-message error-message_color_red error-message__product-price-empty display-none">
					Merci de saisir un prix en euros.
				</p>
				<p class="error-message error-message_color_red error-message__product-price-validity display-none">
					Merci de saisir un prix en euros.
				</p>
				{{ form_errors(adminCreateProductForm.price) }}
			</div>
			{# description #}
			<div class="form-field">
				{{ form_label(adminCreateProductForm, 'Description', { 'label_attr': { 'class': 'display-none' }}) }}
				{{ form_widget(adminCreateProductForm.description, { 'id': 'create-product-description-input', 'attr': {'class': 'form-field__input form-field__input_color_black form-field__input-product-description', 'placeholder': 'Description' }}) }}
				<p class="error-message error-message_color_red error-message__product-description-empty display-none">
					Merci de saisir une description.
				</p>
				{# <p class="error-message error-message_color_red error-message__product-description-validity display-none">
													Merci de saisir une description valide.
												</p> #}
				{{ form_errors(adminCreateProductForm.description) }}
			</div>
			{# availability #}
			<div class="form-field">
				{{ form_label(adminCreateProductForm, 'Disponibilité :', { 'label_attr': { 'class': 'form-field__label' }}) }}
				{{ form_widget(adminCreateProductForm.availability) }}
				<p class="error-message error-message_color_red error-message__product-availability-not-checked display-none">
					Merci de sélectionnner une valeur.
				</p>
			</div>
			{# category #}
			<div class="form-field">
				{{ form_label(adminCreateProductForm, 'Catégorie :', { 'label_attr': { 'class': 'form-field__label' }}) }}
				{{ form_widget(adminCreateProductForm.category) }}
				<p class="error-message error-message_color_red error-message__category-product-not-checked display-none">Merci de sélectionnner une catégorie.</p>
				{{ form_errors(adminCreateProductForm.category) }}
			</div>
			{# Submit adminCreateProductForm button #}
			<button type="submit" class="page__button page__button-submit page__button-create page__button_background-color_dodger-blue page__button_color_white" id="admin-create-product-button">Créer</button>
			{{ form_end(adminCreateProductForm) }}
			{# END : adminCreateProductForm #}
		</section>
	</main>
{% endblock %}
{# END : admin_product_create #}
