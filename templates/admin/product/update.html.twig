{% extends 'base.html.twig' %}

{% block title %}
	Mettre à jour - Produit -
	{{ product.name }}
	|
	{{ parent() }}
{% endblock %}

{# START : admin_product_update #}
{% block body %}
	<main>
		<section class="page">
			<h2>Mettre à jour Produit :
				{{ product.name }}</h2>
			{# START :adminUpdateProductForm #}
			{{ form_start(adminUpdateProductForm, { 'attr': { 'novalidate': 'novalidate', 'class': 'form', 'id': 'admin-update-product-form' }}) }}
			{# picture #}
			<div class="form-field-user-picture">
				<img class="page__picture-entity" src="{{ asset('assets/uploads/pictures/products/' ~ product.picture) }}" alt="image {{ product.name }}"/>
			</div>
			{# upload #}
			<div class="form-field">
				{{ form_label(adminUpdateProductForm, 'Photo', { 'label_attr': { 'class': 'display-none' }}) }}
				{{ form_widget(adminUpdateProductForm.upload, { 'id': 'update-product-picture-input', 'attr': { 'class': 'form-field__input form-field__input_color_black form-field__input-file' }}) }}
				<p class="error-message error-message_color_red error-message__file-mime-type display-none">
					Merci de télécharger un fichier au format PDF, PNG, JPEG ou SVG.
				</p>
				<p class="error-message error-message_color_red error-message__file-size display-none">
					Merci de télécharger un fichier de maximum 300 000 bytes.
				</p>
				{{ form_errors(adminUpdateProductForm.upload) }}
			</div>
			{# name #}
			<div class="form-field">
				{{ form_label(adminUpdateProductForm, 'Nom', { 'label_attr': { 'class': 'display-none' }}) }}
				{{ form_widget(adminUpdateProductForm.name, { 'id': 'update-search-product-input', 'attr': {'class': 'form-field__input form-field__input_color_black form-field__input-product-name', 'placeholder': 'Nom' }}) }}
				<p class="error-message error-message_color_red error-message__product-name-empty display-none">
					Merci de saisir un nom de produit.
				</p>
				<p class="error-message error-message_color_red error-message__product-name-validity display-none">
					Merci de saisir un nom de produit valide.
				</p>
				{{ form_errors(adminUpdateProductForm.name) }}
			</div>
			{# price #}
			<div class="form-field">
				{{ form_label(adminUpdateProductForm, 'Prix', { 'label_attr': { 'class': 'display-none' }}) }}
				{{ form_widget(adminUpdateProductForm.price, { 'id': 'update-product-price-input', 'attr': {'class': 'form-field__input form-field__input_color_black form-field__input-product-price', 'placeholder': 'Prix en euros' }}) }}
				<p class="error-message error-message_color_red error-message__product-price-empty display-none">
					Merci de saisir un prix.
				</p>
				<p class="error-message error-message_color_red error-message__product-price-validity display-none">
					Merci de saisir un prix en euros.
				</p>
				{{ form_errors(adminUpdateProductForm.price) }}
			</div>
			{# description #}
			<div class="form-field">
				{{ form_label(adminUpdateProductForm, 'Description', { 'label_attr': { 'class': 'display-none' }}) }}
				{{ form_widget(adminUpdateProductForm.description, { 'id': 'update-product-description-input', 'attr': {'class': 'form-field__input form-field__input_color_black form-field__input-product-description', 'placeholder': 'Description' }}) }}
				<p class="error-message error-message_color_red error-message__product-description-empty display-none">
					Merci de saisir une description.
				</p>
				<p class="error-message error-message_color_red error-message__product-description-validity display-none">
					Merci de saisir une description valide.
				</p>
				{{ form_errors(adminUpdateProductForm.description) }}
			</div>
			{# availability #}
			<div class="form-field">
				{{ form_label(adminUpdateProductForm, 'Disponibilité :', { 'label_attr': { 'class': 'form-field__label' }}) }}
				{{ form_widget(adminUpdateProductForm.availability) }}
				<p class="error-message error-message_color_red error-message__product-availability-not-checked display-none">
					Merci de sélectionnner une valeur.
				</p>
				{{ form_errors(adminUpdateProductForm.availability) }}
			</div>
			{# category #}
			<div class="form-field">
				{{ form_label(adminUpdateProductForm, 'Categorie :', { 'label_attr': { 'class': 'form-field__label' }}) }}
				{{ form_widget(adminUpdateProductForm.category) }}
				<p class="error-message error-message_color_red error-message__category-product-not-checked display-none">
					Merci de sélectionnner une catégorie.
				</p>
				{{ form_errors(adminUpdateProductForm.category) }}
			</div>
			{# Submit adminUpdateProductForm button #}
			<button type="submit" class="page__button page__button-submit page__button_background-color_safety-orange page__button_color_white" id="admin-update-product-button">
				Mettre à jour
			</button>
			{{ form_end(adminUpdateProductForm) }}
			{# END : adminUpdateProductForm #}
		</section>
	</main>
{% endblock %}
{# END : admin_product_update #}
