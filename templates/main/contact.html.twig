{% extends 'base.html.twig' %}

{% block title %}
	Contact |
	{{ parent() }}
{% endblock %}

{# START : contact #}
{% block body %}
	<main>
		<section class="page">
			<h2>Informations</h2>
			<div class="information">
				<p>
					üìß Envoyer nous un e-mail :
				</p>
				<a class="page__link page__link_text_normal page__link_padding-and-margin_0 page__link_color_blue" id="contact-email-link" href="mailto:contact@eshop.fr">contact@eshop.fr</a>
			</div>
			<h2>Contactez-nous</h2>
			{# START : contactForm #}
			{{ form_start(contactForm, { 'attr': { 'novalidate': 'novalidate', 'class': 'form', 'id': 'contact-form' }}) }}
			{# subject #}
			<div class="form-field">
				{{ form_label(contactForm, 'Sujet :', { 'label_attr': { 'class': 'form__label' }}) }}
				{{ form_widget(contactForm.subject) }}
				<p class="error-message error-message_color_red error-message__contact-subject-not-checked display-none">
					Merci de s√©lectionnner une valeur.
				</p>
				{{ form_errors(contactForm.subject) }}
			</div>
			{# gender #}
			<div class="form-field">
				{{ form_widget(contactForm.civilityTitle) }}
				<p class="error-message error-message_color_red error-message__user-gender-not-checked display-none">
					Merci de s√©lectionnner une valeur.
				</p>
				{{ form_errors(contactForm.civilityTitle) }}
			</div>
			{# firstName #}
			<div class="form-field">
				{{ form_label(contactForm, 'Pr√©nom', { 'label_attr': { 'class': 'display-none' }}) }}
				{{ form_widget(contactForm.firstName, { 'id': 'contact-first-name-input', 'attr': {'class': 'form-field__input form-field__input_color_black form-field__input-user-first-name', 'placeholder': 'Pr√©nom' }}) }}
				<p class="error-message error-message_color_red error-message__empty-first-name display-none">
					Merci de saisir un pr√©nom.
				</p>
				{{ form_errors(contactForm.firstName) }}
			</div>
			{# lastName #}
			<div class="form-field">
				{{ form_label(contactForm, 'Nom', { 'label_attr': { 'class': 'display-none' }}) }}
				{{ form_widget(contactForm.lastName, { 'id': 'contact-last-name-input', 'attr': {'class': 'form-field__input form-field__input_color_black form-field__input-user-last-name', 'placeholder': 'Nom'}}) }}
				<p class="error-message error-message_color_red error-message__empty-last-name display-none">
					Merci de saisir un nom.
				</p>
				{{ form_errors(contactForm.lastName) }}
			</div>
			{# email #}
			<div class="form-field">
				{{ form_label(contactForm, 'E-mail', { 'label_attr': { 'class': 'display-none' }}) }}
				{{ form_widget(contactForm.email, { 'id': 'contact-email-input', 'attr': {'class': 'form-field__input form-field__input_color_black form-field__input-user-email', 'placeholder': 'E-mail' }}) }}

				<p class="error-message error-message_color_red error-message__email-empty error-message__email-empty display-none ">
					Merci de saisir un e-mail.
				</p>
				<p class="error-message error-message_color_red error-message__email-validity display-none">
					Merci de saisir un e-mail valide.
				</p>
				{{ form_errors(contactForm.email) }}
			</div>
			{# phoneNumber #}
			<div class="form-field">
				{{ form_label(contactForm, 'Num√©ro de t√©l√©phone mobile', { 'label_attr': { 'class': 'display-none' }}) }}
				{{ form_widget(contactForm.phoneNumber, { 'id': 'contact-phone-number-input', 'attr': {'class': 'form-field__input form-field__input_color_black form-field__input-phone-number', 'placeholder': 'Num√©ro de t√©l√©phone mobile' }}) }}
				<p class="error-message error-message_color_red error-message__empty-phone-number display-none">
					Merci de saisir un num√©ro de t√©l√©phone mobile.
				</p>
				<p class="error-message error-message_color_red error-message__validity-phone-number display-none">
					Merci de saisir un num√©ro de t√©l√©phone mobile valide.
				</p>
				{{ form_errors(contactForm.phoneNumber) }}
			</div>
			{# upload #}
			<div class="form-field form-field-upload-file">
				{{ form_label(contactForm, 'Fichier', { 'label_attr': { 'class': 'display-none' }}) }}
				{{ form_widget(contactForm.upload, { 'id': 'contact-upload-input', 'attr': { 'class': 'form-field__input form-field__input_color_black form-field__input-file' }}) }}
				<p class="error-message error-message_color_red error-message__file-mime-type display-none">
					Merci de t√©l√©charger un fichier au format PDF, PNG, JPEG ou SVG.
				</p>
				<p class="error-message error-message_color_red error-message__file-size display-none">
					Merci de t√©l√©charger un fichier de maximum 300 000 bytes.
				</p>
				{{ form_errors(contactForm.upload) }}

			</div>
			{# message #}
			<div class="form-field">
				{{ form_label(contactForm, 'Message', { 'label_attr': { 'class': 'display-none' }}) }}
				{{ form_widget(contactForm.message, { 'id': 'contact-message-input', 'attr': {'class': 'form-field__input form-field__input_color_black form-field__input-message', 'placeholder': 'Message' }}) }}

				<p class="error-message error-message_color_red error-message__message-empty display-none">
					Merci de saisir un message.
				</p>
				{{ form_errors(contactForm.message) }}
			</div>
			{# Submit button #}
			<button type="submit" class="page__button page__button-submit page__button_background-color_blue page__button_color_white" id="contact-button">Envoyer</button>
			{{ form_end(contactForm) }}
			{# END : contactForm #}
		</section>
	</main>
{% endblock %}
{# END : contact #}
